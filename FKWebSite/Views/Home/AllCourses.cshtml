<div class="container border p-3">
    <form asp-action="AllCourses">
        <label>Search by courses' codes</label>
        <input type="text" name="SearchCourses" class="form-control" placeholder="Enter The Course Code, Like (mth 101)" />
        <br />
        <center>
            <button class="btn btn-primary">Search</button>
        </center>
    </form>
</div>


<br />
<br />

<div class="container">
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>
                    <p> Code </p>
                </th>
                <th>
                    <p> Name </p>
                </th>
                <th>
                    <p> PDFs </p>
                </th>
                <th>
                    <p> Videos </p>
                </th>
                <th>
                    <p> Date </p>
                </th>
                <th>
                    <p> Referance </p>
                </th>
                <th>
                    <p> Teacher Name </p>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a href="@Html.DisplayFor(modelItem => item.PDFs)">
                            Click Here
                        </a>
                    </td>
                    <td>
                        <a href="@Html.DisplayFor(modelItem => item.Videos)">
                            Click Here
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a href="@Html.DisplayFor(modelItem => item.Reference)">
                            Click Here
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Doctor.Name)

                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

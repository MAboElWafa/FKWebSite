

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="icon" href="~/img/FaaelNew.jpeg" type="~/image/png" />
    <title>Courses Details</title>
   <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/flaticon.css" />
    <link rel="stylesheet" href="~/css/themify-icons.css" />
    <link rel="stylesheet" href="~/vendors/owl-carousel/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/vendors/nice-select/css/nice-select.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>

    @section Headerimg{
        <header class="header_area white-header">
            <div class="main_menu">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="container">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <a class="navbar-brand logo_h" href="~/home/Index">
                            <img src="~/img/FaaelNew.jpeg" style="border-radius:50% ; height:50px" alt="" />
                        </a>
                        <button class="navbar-toggler"
                                type="button"
                                data-toggle="collapse"
                                data-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent"
                                aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="icon-bar"></span> <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse offset"
                             id="navbarSupportedContent">
                            <ul class="nav navbar-nav menu_nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="~/home/index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="~/home/about">About</a>
                                </li>
                                <li class="nav-item submenu dropdown">
                                    <a href="#"
                                       class="nav-link dropdown-toggle"
                                       data-toggle="dropdown"
                                       role="button"
                                       aria-haspopup="true"
                                       aria-expanded="false">All Services</a>
                                    <ul class="dropdown-menu">
                                        <li class="nav-item">
                                            <a class="nav-link" href="~/home/Delegates">Delegates</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="~/home/RecommendedTable">Recommended Tables</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="~/home/CreateYourTable">Create Your Table</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="~/home/Contact">Contact</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>


        <section class="banner_area">
            <div class="banner_inner d-flex align-items-center">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <div class="banner_content text-center">
                                <h2>Department Details</h2>
                                <div class="page_link">
                                    <a href="~/home/index">Home</a>
                                    <a href="~/home/DepartmentDetails">Department Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    <section class="course_details_area section_gap">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
    <div class="col-lg-8 course_details_left">
        <div class="main_image">
            <img class="img-fluid" style="height:400px" src="~/img/Departments/@item.Image" alt="">
        </div>
        <div class="content_wrapper">
            <h4 class="title">Description</h4>
            <div class="content">
                @item.Description
            </div>

            <h4 class="title">Message</h4>
            <div class="content">
                To download the message of depatment please
                <a href="@item.Message"> click here</a>
            </div>


            <h4 class="title">Vision</h4>
            <div class="content">
                To download the vision of depatment please
                <a href="@item.Vision"> click here</a>


            </div>


            <h4 class="title">Slate</h4>
            <div class="content">
                To download the slate of depatment please
                <a href="@item.Slate"> click here</a>

            </div>




        </div>
    </div>


                    <div class="col-lg-4 right-contents">
                        <ul>
                            <li>
                                <a class="justify-content-between d-flex" href="#">
                                    <p>Dept. Head </p>
                                    <span class="or"> @item.DeptHead</span>
                                </a>
                            </li>
                            <li>
                                <a class="justify-content-between d-flex" href="#">
                                    <p>Teahers Num.</p>
                                    <span>@item.TeachersNum</span>
                                </a>
                            </li>

                            <li>
                                <a class="justify-content-between d-flex" href="#">
                                    <p>Quality</p>
                                    <span>@item.Quality</span>
                                </a>
                            </li>
                        </ul>
                    </div>            }
            </div>
        </div>
    </section>

</body>
</html>
